{
  "name": "caliopen.frontend",
  "version": "0.0.1",
  "description": "CaliOpen UI is the user interface for CaliOpen.",
  "homepage": "https://caliopen.org/",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "webpack-dashboard -- npm-run-all --parallel --race start:dev:server start:dev:assets",
    "start:dev": "DASHBOARD=false npm-run-all --parallel --race start:dev:server start:dev:assets",
    "start:dev:server": "NODE_ENV=development PORT=4001 kotatsu start -c webpack/webpack.config.server.js",
    "start:dev:assets": "NODE_ENV=development kotatsu serve -c webpack/webpack.config.browser.js -p 4000 --proxy / http://localhost:4001",
    "start:dev:browser": "DASHBOARD=false kotatsu serve --config webpack/webpack.config.browser.js --port 4000 --index ./template/index.kotatsu-serve.html",
    "start:prod": "NODE_ENV=production ./bin/server",
    "start:desktop": "npm-run-all --parallel --race build:desktop:dev start:desktop:electron",
    "start:desktop:electron": "NODE_ENV=development electron ./electron/",
    "start:smartphone": "npm-run-all --parallel --race build:smartphone:dev start:smartphone:android",
    "start:smartphone:android": "cd cordova && nodemon --watch www --exec 'cordova emulate android --debug'",
    "build:desktop:dev": "NODE_ENV=development webpack-dashboard -- webpack --watch --config webpack/webpack.config.electron.js",
    "build:smartphone:dev": "NODE_ENV=development webpack-dashboard -- webpack --watch --config webpack/webpack.config.cordova.js",
    "release": "npm-run-all release:web:server release:web:browser",
    "release:web:server": "NODE_ENV=production DASHBOARD=false kotatsu build server --config webpack/webpack.config.server.js",
    "release:web:browser": "NODE_ENV=production DASHBOARD=false kotatsu build client --config webpack/webpack.config.browser.js",
    "cordova": "cd cordova && cordova",
    "test": "npm-run-all lint test:unit",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "lint": "npm-run-all lint:js lint:sass",
    "lint:js": "eslint --ext .js --ext .jsx src/",
    "lint:sass": "sass-lint 'src/**/*.scss'",
    "i18n": "react-translate-scripts"
  },
  "author": "CaliOpen <contact@caliopen.org> (https://caliopen.org/)",
  "license": "MIT",
  "dependencies": {
    "@gandi/react-translate": "^1.0.1",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.25.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "font-awesome": "^4.6.3",
    "foundation-sites": "^6.2.4-rc2",
    "image-webpack-loader": "^3.0.0",
    "jquery": "^3.1.1",
    "locale": "^0.1.0",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.5",
    "react-redux": "^4.4.5",
    "react-redux-notify": "^1.0.8",
    "react-router": "^2.8.1",
    "react-router-redux": "^4.0.6",
    "react-tappable": "^0.8.4",
    "redux": "^3.6.0",
    "reselect": "^2.5.4",
    "sass-loader": "^4.0.2",
    "script-loader": "^0.7.0",
    "style-loader": "^0.13.1",
    "uuid": "^3.0.1",
    "webpack": "^1.13.2",
    "webpack-dashboard": "^0.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-gettext-plugin": "^2.2.0",
    "babel-jest": "^16.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.16.0",
    "cordova": "^6.3.1",
    "deep-freeze-strict": "^1.1.1",
    "electron": "^1.4.3",
    "enzyme": "^2.5.1",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-loader": "^1.6.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "expose-loader": "^0.7.1",
    "html-webpack-plugin": "^2.22.0",
    "jest-cli": "^16.0.2",
    "kotatsu": "^0.14.0",
    "nodemon": "^1.11.0",
    "po2json": "^0.4.5",
    "react-addons-test-utils": "^15.3.2",
    "react-dev-utils": "^0.2.1",
    "react-test-renderer": "^15.3.2",
    "sass-lint": "^1.9.1",
    "sasslint-loader": "0.0.1",
    "webpack-dev-middleware": "^1.8.3",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-target-electron-renderer": "^0.4.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "transform-decorators-legacy"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^.+\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
